---
# -*- coding: utf-8 -*-

extends: default

rules:
  line-length: disable
  brackets: disable
  truthy: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

